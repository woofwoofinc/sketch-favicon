{
  "name": "sketch-favicon",
  "description": "Sketch plugin for favicon generation.",
  "version": "0.1.0",
  "license": "(Apache-2.0 OR MIT)",
  "homepage": "https://github.com/woofwoofinc/sketch-favicon",
  "repository": {
    "type": "git",
    "url": "https://github.com/woofwoofinc/sketch-favicon.git"
  },
  "scripts": {
    "build": "literacy src/js --copy-files --out-dir lib && eslint lib && skpm build",
    "publish": "skpm publish"
  },
  "engines": {
    "sketch": ">=3.0"
  },
  "skpm": {
    "manifest": "lib/manifest.json",
    "main": "favicon.sketchplugin"
  },
  "dependencies": {
    "arraybuffer-to-buffer": "^0.0.4",
    "base64-arraybuffer": "^0.1.5",
    "pngparse-sync": "^1.0.2"
  },
  "devDependencies": {
    "eslint": "^4.6.0",
    "eslint-config-strict": "^14.0.0",
    "literacy": "^1.1.0",
    "skpm": "^0.10.5"
  },
  "eslintConfig": {
    "extends": "strict",
    "env": {
      "es6": true,
      "node": true
    },
    "globals": {
      "log": false,
      "MSExportRequest": false,
      "NSData": false,
      "NSTemporaryDirectory": false
    },
    "rules": {
      "arrow-parens": "off",
      "id-blacklist": "off",
      "id-match": "off",
      "indent": "off",
      "no-multiple-empty-lines": "off",
      "padded-blocks": "off",
      "prefer-destructuring": "off"
    }
  },
  "keywords": [
    "sketch",
    "favicon"
  ]
}
